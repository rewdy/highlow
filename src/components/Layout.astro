---
interface Props {
  title?: string;
  isHome?: boolean;
}

import Header from "./Header.astro";
import Footer from "./Footer.astro";

import "../style/style.scss";
import { siteTitle } from "../constants";

const { title, isHome } = Astro.props;
const titleBase = siteTitle;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title ? `${title} ðŸª¨ ${titleBase}` : titleBase}</title>
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Alan+Sans:wght@300..900&display=swap"
      rel="stylesheet"
    />
    <!--<link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
  </head>

  <body>
    <Header />
    {
      Astro.slots.has("hero") && (
        <div class="hero">
          <div class="container">
            <slot name="hero" />
          </div>
        </div>
      )
    }
    <main>
      <div class="container">
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>
